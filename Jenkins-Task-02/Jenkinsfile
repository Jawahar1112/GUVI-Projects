pipeline {
  agent any

  stages {
    stage('Build') {
      steps {
        dir('Jenkins-Task-02') {
          echo '🏗️ Running build script...'
          sh 'chmod +x build.sh'
          sh './build.sh'
        }
      }
    }

    stage('Archive Output') {
      steps {
        dir('Jenkins-Task-02') {
          echo '📦 Archiving output.txt'
          archiveArtifacts artifacts: 'output.txt', onlyIfSuccessful: true
        }
      }
    }
  }

  post {
    success {
      emailext(
        to: 'jawaharjawa1112@gmail.com',
        subject: "✅ Build #${BUILD_NUMBER} Successful",
        body: "Jenkins build completed successfully.",
        attachLog: true
      )
    }
    failure {
      emailext(
        to: 'jawaharjawa1112@gmail.com',
        subject: "❌ Build #${BUILD_NUMBER} Failed",
        body: "Jenkins build failed. Please check the console output.",
        attachLog: true
      )
    }
  }
}
